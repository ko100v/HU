<head>
  <style type=text/css>
    .tashaci {
      padding: 15px;
    }
    .normal {
      width: 100px;
      height: 100px;
    }
    .spacer {
      width: 100%;
      background-color: white;
      height: 1px;
    }
    .date {
      float: right;
      font-size: 12px;
    }
  </style>
</head>
<div class="container">

    <% @questions.each do |q| %>
    <div class="lead well">
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="<%= q.gravatar %>"/>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"> <%= q.email %> asked: </h4>
          <%= q.body %>
          <div class="tashaci">
            <a href="<%= question_path(q) %>" class="btn btn-success">View Answers</a>
          </div>
          <p class="date"><%= time_ago_in_words q.created_at %> ago </p>
        </div>
      </div>
    </div>
  <% end %>
  <% if @questions.empty? %>
    <div class="alert alert-info"> Nothing here yet, be the first to ask </div>
  <% end %>
</div>

